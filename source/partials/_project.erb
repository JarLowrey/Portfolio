<%
classes||=""
%>

<section class="post_summary <%= classes %>">

  <article>
    <h2><%= project["title"] %> </h2>
    <div>    
      <span class="icons" style="display:'inline-block;'">
        <% if project.github_url then %> <%= img_link("icons/social/github-icon.svg", "Github Repo", project.github_url,"","") %> <% end %>
        <% if project.url then %> <%= img_link("icons/social/open-in-browser.svg", "Website", project.url,"","") %> <% end %>
        <% if project.tutorial_url then %> <%= img_link("icons/social/school-24px.svg", "Tutorial", project.tutorial_url,"","") %> <% end %>
        <% if project.google_play_url then %> <%= img_link("icons/social/Google_Play_symbol.svg", "Google Play", project.google_play_url,"","") %> <% end %>
        <% if project.steam_url then %> <%= img_link("icons/steam.svg", "Steam Store page", project.steam_url,"","") %> <% end %>
        <% if project.gitlab_url then %> <%= img_link("icons/social/gitlab.svg", "Gitlab Repo", project.gitlab_url,"","") %> <% end %>
        <% if project.godot then %> <%= img_link("icons/social/godot.svg", "Godot", project.godot,"","") %> <% end %>
      </span>

        
      <%= project["year"] %>
    </div>


    <% if project.youtube_id then %> 
      <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= project.youtube_id %>" title="Project Video" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% end %>
    
    <% if project.img_urls %>
      <% if project.img_urls.length() == 1 then %> 
        <figure>
          <a target="_blank" href="<%= project.img_urls[0].url %>" >
            <img src="<%= project.img_urls[0].url  %>" alt="<%= project.img_urls[0].alt %>">
          </a>
        </figure> 

      <% else%>
        <%= partial "partials/slideshow.erb", locals: { images: project.img_urls } %>
      <% end %>
    <% end %>

    <%= project["summary"] %>
  </article>
</section>
