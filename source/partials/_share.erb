<%
if !current_article.title
  return
else
  # current_article: http://www.rubydoc.info/github/middleman/middleman-blog/Middleman/Blog/BlogArticle
  # current_page: http://www.rubydoc.info/gems/middleman-core/3.3.0/Middleman/Sitemap/Resource
  # frontmatter & blog: https://middlemanapp.com/basics/blogging/
  title = current_article.title
  url = "#{config[:host]}#{current_page.url}"
  summary = current_article.metadata[:page]['blurb']
  social = data.about_me.social

  # twitter_url = "https://twitter.com/intent/tweet?text=#{title}&url=#{url}&via=#{social.twitter.username}&related=#{social.twitter.username}"
  twitter_url = "https://twitter.com/intent/tweet?text=#{title}&url=#{url}"
  fb_url = "https://facebook.com/sharer.php?u=#{url}"
  gPlus_url = "https://plus.google.com/share?url=#{url}"
  linkedIn_url = "http://www.linkedin.com/shareArticle?mini=true&url=#{url}&title=#{title}&summary=#{summary}&source=#{url}"
  reddit_url = "http://www.reddit.com/submit?url=#{url}&title=#{title}"
  hacker_news_url = "https://news.ycombinator.com/submit"
end %>

<div class="quick-actions">

<%=
#img_link social.facebook.img_url,social.facebook.img_alt, fb_url, "Share on #{social.facebook.img_alt}", ""
%>
  <%= img_link social.twitter.img_url,      social.twitter.img_alt,     twitter_url,      "Share on #{social.twitter.img_alt}", "" %>
  <%= img_link social.hacker_news.img_url,  social.hacker_news.img_alt, hacker_news_url,  "Share on #{social.hacker_news.img_alt}", "" %>
  <%= img_link social.reddit.img_url,       social.reddit.img_alt,      reddit_url,       "Share on #{social.reddit.img_alt}", "" %>
  <%= img_link social.linkedIn.img_url,     social.linkedIn.img_alt,    linkedIn_url,     "Share on #{social.linkedIn.img_alt}", "" %>
</div>
